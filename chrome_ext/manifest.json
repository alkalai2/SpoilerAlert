{
  "manifest_version": 2,

  "name": "Spoiler Alert",
  "description": "Blocks potential tv show and sport spoilers from Facebook and Twitter streams.",
  "version": "1.1",

  "browser_action": {
    "default_icon": "test.png",
    "default_popup": "popup.html",
    "default_title": "Spoiler Alert!"
  },

  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },

  "content_scripts": [
    {
        "matches": ["http://*/*", "https://*/*"],
        "js": ["facebook_blocker.js"]
    }
  ],

  "permissions": [
    "background",
    "storage",
    "tabs",
    "activeTab",
    "http://*/*",
    "https://*/*"
  ]
}